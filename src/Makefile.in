#
# Makefile.in for services/services
#
# $Id$
#
@SET_MAKE@

CC		= @CC@
INSTALL		= @INSTALL@
INSTALL_BIN	= @INSTALL_PROGRAM@
INSTALL_DATA	= @INSTALL_DATA@
CFLAGS		= @IRCSERVICES_CFLAGS@ #`perl -MExtUtils::Embed -e ccopts`
LDFLAGS   	= @LDFLAGS@
MKDEP		= @MKDEP@
STDOUT		= @STDOUT@
MV		= @MV@
RM		= @RM@
SED		= @SED@
YACC		= @YACC@
LEX		= @LEX@
RUBY_CFLAGS = @RUBY_CFLAGS@
RUBY_LIBS = @RUBY_LIBS@

prefix		= @prefix@
exec_prefix	= $(DESTDIR)@exec_prefix@
bindir		= $(DESTDIR)@bindir@
sysconfdir	= $(DESTDIR)@sysconfdir@
localstatedir	= $(DESTDIR)@localstatedir@

# must not have whitespace here
CLOBBER=@CLOBBER@

# If you wish to change this, look in include/defaults.h also and change SPATH
PROGS		= services

SSL_LIBS	= @SSL_LIBS@
SSL_INCLUDES	= @SSL_INCLUDES@
IRCDLIBS	= @MODULES_LIBS@ @LIBS@ ../libio/libio.a $(SSL_LIBS)
INCLUDES	= -I../include -I../libio $(SSL_INCLUDES)
CPPFLAGS	= ${INCLUDES} @CPPFLAGS@

default:	all

y.tab.o:  y.tab.cc conf/parser.yxx
	${CXX} ${CPPFLAGS} ${CFLAGS} -I. -c y.tab.cc

# Note GNU bison uses <file>.tab.c not y.tab.c
y.tab.cc:  conf/parser.yxx
	${YACC} -d conf/parser.yxx
	mv y.tab.c y.tab.cc

lex.yy.o: y.tab.cc lex.yy.cc conf/lexer.l
	${CXX} ${CPPFLAGS} ${CFLAGS} -I. -c lex.yy.cc

lex.yy.cc: conf/lexer.l
	${LEX} conf/lexer.l
	mv lex.yy.c lex.yy.cc

SSL_SRCS = rsa.c

SRCS = 								\
 channel.cc						\
 channel_mode.cc			\
 conf/conf.cc 				\
 conf/connect.cc			\
 conf/database.cc			\
 conf/logging.cc			\
 conf/modules.cc			\
 conf/servicesinfo.cc	\
 conf.cc							\
 client.cc						\
 crypt.cc							\
 connection.cc 				\
 dbm.cc 		  				\
 hostmask.cc					\
 interface.cc					\
 language.cc					\
 packet.cc						\
 parse.cc							\
 services.cc					\
 send.cc								

OBJS = ${SRCS:.cc=.o}

all: .depend services

build: all

services: @MODULES_LIBS@ ../libio/libio.a lex.yy.o y.tab.o $(OBJS)
	${CXX} ${CFLAGS} ${LDFLAGS} -o $@ ${OBJS} y.tab.o lex.yy.o ${IRCDLIBS} ${RUBY_LIBS} #`perl -MExtUtils::Embed -e ldopts`

../libio/libio.a:
	cd ../libio && ${MAKE} ${MFLAGS}

install-mkdirs:
	mkdir -p $(DESTDIR)$(prefix) $(exec_prefix) $(bindir) $(sysconfdir) \
		$(localstatedir)/logs

install: install-mkdirs build
	@for i in $(PROGS); do \
		if test -f $(bindir)/$$i -a -z "$(CLOBBER)"; then \
			echo $(MV) $(bindir)/$$i $(bindir)/$$i.old; \
			$(MV) $(bindir)/$$i $(bindir)/$$i.old; \
		fi; \
		echo $(INSTALL_BIN) $$i $(bindir); \
		$(INSTALL_BIN) $$i $(bindir); \
	done

# this is really the default rule for c files
.cc.o:
	${CXX} ${CPPFLAGS} ${CFLAGS} ${RUBY_CFLAGS} -c -o ${<:.cc=.o} $<

.depend:
	${MKDEP} ${CPPFLAGS} ${SRCS} ${STDOUT}
	@${SED} -e '/^# Autogenerated - do not delete/,$$d' <Makefile >Makefile.depend
	@echo "# Autogenerated - do not delete" >> Makefile.depend
	@echo "include .depend" >> Makefile.depend
	@${MV} Makefile.depend Makefile

clean:
	${RM} -f *.o conf/*.o *.exe *~ *core services lex.yy.c y.tab.*
distclean: clean
	${RM} -f Makefile .depend

.PHONY: clean distclean install install-mkdirs build
